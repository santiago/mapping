.stream-actions
  button#sync.btn.btn-primary Syncronize

p.total Following #{users.length}

ul.following
  each user, i in users
    li.following-item
      .profile-image
        span 
          img(src="#{user.profile_image_url}")
      .user
        a(href='http://twitter.com/#{user.screen_name}', target='_blank') #{user.screen_name}
      .action
        a(href="#") unfollow
      .tags
        form
          ul.tagging
            -if(tags[user.screen_name.toLowerCase()])
              each tag in tags[user.screen_name.toLowerCase()]
                li #{tag}